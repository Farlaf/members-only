<h1>Posts#index</h1>

<% if current_user %>
    <%= link_to "New Post", new_post_path %>
<% end %>


<% @posts.each do |post| %>
    <article class="card mb-3">
        <div class="card-body">
            <% if current_user %>
                <div class="badge bg-primary"><%= post.user.email %></div>
            <% end %>
            <h5 class="card-title"><%= post.title %></h5>
            <p>
                <%= post.body %>
            </p>
        </div>
    </article>
<% end %>