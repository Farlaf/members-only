<% unless current_user %>
    <div class="bg-light p-5 rounded mb-4">
    <h1>For members only</h1>
    <p class="lead">For see who wrote the post, you need to login</p>
    <%= link_to "See members Â»", new_user_session_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>


<% @posts.each do |post| %>
    <article class="card mb-3">
        <div class="card-body">
            <% if current_user %>
                <div class="badge bg-primary"><%= post.user.email %></div>
            <% end %>
            <h5 class="card-title"><%= post.title %></h5>
            <p>
                <%= post.body %>
            </p>
        </div>
    </article>
<% end %>